<body class="vh-100">

    @using (Html.BeginForm("NewRegistration", "Access", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="authincation h-100">
            <div class="container h-100">
                <div class="row justify-content-center h-100 align-items-center">
                    <div class="col-md-6">
                        <div class="authincation-content">
                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    ViewBag.Error
                                </div>
                            }
                            <div class="row no-gutters">
                                <div class="col-xl-12">
                                    <div class="auth-form">
                                        <div class="text-center mb-3">
                                            @*<a href="~/Assets/index.html"><img src="~/Assets/images/logo-full.png" alt=""></a>*@
                                            <h1>BRMS</h1>
                                        </div>
                                        <h4 class="text-center mb-4">Sign Up your account</h4>
                                        <form>
                                            <div class="row">
                                                <div class="mb-3 col-md-6">
                                                    <label class="form-label">Name</label>
                                                    @Html.TextBoxFor(model => model.name, htmlAttributes: new { @class = "form-control", type = "text", placeholder = "John" })
                                                </div>
                                                <div class="mb-3 col-md-6">
                                                    <label class="form-label">Email</label>
                                                    @Html.TextBoxFor(model => model.email, htmlAttributes: new { @class = "form-control", type = "email", placeholder = "Email" })
                                                </div>
                                                <div class="mb-3 col-md-6">
                                                    <label class="form-label">Phone</label>
                                                    @Html.TextBoxFor(model => model.phone, htmlAttributes: new { @class = "form-control", type = "number", placeholder = "1234" })
                                                </div>
                                                <div class="mb-3 col-md-6">
                                                    <label class="form-label">Password</label>
                                                    @Html.TextBoxFor(model => model.password, htmlAttributes: new { @class = "form-control", type = "Password" })
                                                </div>
                                                <div class="mb-3 col-md-6">
                                                    <label class="form-label">Front CNIC</label>
                                                    <input type="file" class="form-control" name="frontCnic" />
                                                </div>
                                                <div class="mb-3 col-md-6">
                                                    <label class="form-label">Back CNIC</label>
                                                    <input type="file" class="form-control" name="backCnic" />
                                                </div>
                                                <div class="mb-3 col-md-6">
                                                    <label class="form-label">Upload Image</label>
                                                    <input type="file" class="form-control" name="imgFile" />
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-primary">Save</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }


    <!--**********************************
        Scripts
