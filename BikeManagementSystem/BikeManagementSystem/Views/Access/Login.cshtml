<body class="vh-100">

    @using (Html.BeginForm("Login", "Access", FormMethod.Post))
    {
        <div class="authincation h-100">
            <div class="container h-100">
                <div class="row justify-content-center h-100 align-items-center">
                    <div class="col-md-6">
                        @if (ViewBag.InvalidCredential != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.InvalidCredential
                            </div>
                        }
                        <div class="authincation-content">
                            <div class="row no-gutters">
                                <div class="col-xl-12">
                                    <div class="auth-form">
                                        <div class="text-center mb-3">
                                            @*<a href="~/Assets/index.html"><img src="~/Assets/images/logo-full.png" alt=""></a>*@
                                            <h1>BRMS</h1>
                                        </div>
                                        <h4 class="text-center mb-4">Sign in your account</h4>
                                        <form action="">
                                            <div class="mb-3">
                                                <label class="mb-1"><strong>Email</strong></label>
                                                @Html.TextBoxFor(model => model.email, htmlAttributes: new { @class = "form-control", type = "email", placeholder = "Email" })
                                                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="mb-3">
                                                <label class="mb-1"><strong>Password</strong></label>
                                                @Html.TextBoxFor(model => model.password, htmlAttributes: new { @class = "form-control", type = "password", placeholder = "Password" })
                                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="text-center">
                                                <button type="submit" class="btn btn-primary btn-block">Sign Me In</button>
                                            </div>
                                            <div class="text-center mt-3">
                                                <a href="@Url.Action("NewRegistration","Access")" class="btn btn-link">New Registration</a>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }


    <!--**********************************
